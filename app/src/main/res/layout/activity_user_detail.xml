<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View" />
        <variable
            name="user"
            type="com.example.dicodingsubmissiontwo.model.GithubUser" />
        <variable
            name="isLoading"
            type="Boolean" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorBlack"
            >

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/civ_avatar"
                android:layout_width="@dimen/image_mdm_size"
                android:layout_height="@dimen/image_mdm_size"
                android:layout_marginTop="@dimen/dimen_24dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                />

            <TextView
                android:id="@+id/tv_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_16dp"
                android:layout_marginLeft="@dimen/dimen_48dp"
                android:layout_marginRight="@dimen/dimen_48dp"
                android:gravity="center"
                app:layout_constraintTop_toBottomOf="@id/civ_avatar"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:fontFamily="serif"
                android:textColor="@color/colorWhite"
                android:textStyle="bold"
                android:textSize="@dimen/text_24sp"
                android:text="@{user.username}"
                tools:text="victorang1"
                />

            <TextView
                android:id="@+id/tv_repository"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_16dp"
                android:gravity="center"
                app:layout_constraintTop_toBottomOf="@id/tv_username"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:drawableLeft="@drawable/ic_repository"
                android:drawablePadding="@dimen/dimen_8dp"
                android:fontFamily="sans-serif"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/text_16sp"
                android:text="@{user.repositoryDisplay}"
                tools:text="Repository: 50"
                />

            <TextView
                android:id="@+id/tv_followers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_16dp"
                android:gravity="center"
                app:layout_constraintTop_toBottomOf="@id/tv_repository"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/tv_following"
                android:drawableLeft="@drawable/ic_group_blue"
                android:drawablePadding="@dimen/dimen_8dp"
                android:fontFamily="sans-serif"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/text_16sp"
                android:text="@{user.followerDisplay}"
                tools:text="Followers: 30"
                />

            <TextView
                android:id="@+id/tv_following"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_16dp"
                android:gravity="center"
                app:layout_constraintTop_toBottomOf="@id/tv_repository"
                app:layout_constraintLeft_toRightOf="@id/tv_followers"
                app:layout_constraintRight_toRightOf="parent"
                android:drawableLeft="@drawable/ic_group_yellow"
                android:drawablePadding="@dimen/dimen_8dp"
                android:fontFamily="sans-serif"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/text_16sp"
                android:text="@{user.followingDisplay}"
                tools:text="Following: 30"
                />

            <androidx.constraintlayout.widget.Barrier
                android:id="@+id/barrier"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:barrierDirection="bottom"
                app:constraint_referenced_ids="tv_followers,tv_following"
                />

            <com.google.android.material.tabs.TabLayout
                android:id="@+id/tab_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_12dp"
                app:tabTextColor="@color/colorWhite"
                app:layout_constraintTop_toBottomOf="@id/barrier"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                />

            <View
                android:id="@+id/view_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/detail_background"
                app:layout_constraintTop_toBottomOf="@id/tab_layout"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                />

            <androidx.viewpager.widget.ViewPager
                android:id="@+id/view_pager"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/tab_layout"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                />

            <ProgressBar
                android:id="@+id/progress_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:theme="@style/ProgressBarDetailStyle"
                android:visibility="@{isLoading ? View.VISIBLE : View.GONE}"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                />

            <androidx.constraintlayout.widget.Group
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="@{isLoading ? View.GONE : View.VISIBLE}"
                app:constraint_referenced_ids="tab_layout,view_pager,view_detail,tv_username,civ_avatar,user_detail"
                />

            <androidx.constraintlayout.widget.Group
                android:id="@+id/user_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:constraint_referenced_ids="tv_repository,tv_following,tv_followers"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</layout>