<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.dicodingsubmissiontwo">

    <uses-permission android:name="android.permission.INTERNET" />
    <permission android:name="com.example.victor.github.READ_DATABASE" android:protectionLevel="normal" />
    <permission android:name="com.example.victor.github.WRITE_DATABASE" android:protectionLevel="normal" />

    <application
        android:name=".MyApplication"
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".app.favorite.FavoriteActivity"></activity>
        <activity
            android:name=".app.detail.UserDetailActivity"
            android:theme="@style/UserDetailTheme" />
        <activity android:name=".app.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <provider
            android:authorities="com.example.victor.github"
            android:name=".provider.FavoriteProvider"
            android:exported="true"
            android:readPermission="com.example.victor.github.READ_DATABASE"
            android:writePermission="com.example.victor.github.WRITE_DATABASE" />
    </application>

</manifest>